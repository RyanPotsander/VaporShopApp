<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:theme="@style/Theme.AppCompat.Light.Dialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear_purchase_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Enter Purchase Amount"
            android:id="@+id/text_purchase_dialog"
            android:layout_weight=".6"
            android:layout_marginLeft="8dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="save"
            style="?android:borderlessButtonStyle"
            android:background="@drawable/abc_btn_borderless_material"
            android:textColor="@color/accent"
            android:id="@+id/button_save_purchase"
            android:gravity="right"
            android:layout_weight=".4" />

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_purchase_top"
        android:id="@+id/text_input_dollars">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edit_dollars"
            android:textColor="@android:color/black"
            android:textColorHint="@color/accent"
            android:hint="0"
            android:gravity="right" />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>